<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bubica.testprojektcontacts.ContactDetails">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageViewLargePhoto"
        android:layout_width="200dp"
        android:background="@drawable/circle"
        android:foregroundGravity="center_horizontal"
        android:backgroundTintMode="src_in"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pencil"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageButtonEdit"
        android:background="@android:color/background_light" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/startblack"
        android:layout_marginEnd="14dp"
        android:id="@+id/imageButtonStar"
        android:layout_alignBottom="@+id/imageButtonEdit"
        android:layout_toStartOf="@+id/imageButtonEdit"
        android:background="@android:color/background_light" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/myScrollView"
        android:layout_marginTop="220dp">
        <!-- Here you put the rest of your current view-->

        <TableLayout
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">
            <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:id="@+id/Name"
                />

                <TextView
                    android:text="My Name is Tarzan"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewName"
                    android:layout_weight="1"
                    android:layout_marginLeft="60dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="Company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:id="@+id/Company"
                    />

                <TextView
                    android:text="Company where I work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:id="@+id/textViewCompany"
                    android:layout_marginLeft="60dp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="Mobile phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:id="@+id/Mobile"
                    />

                <TextView
                    android:text="Mobile Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:id="@+id/textViewMobile"
                    android:layout_marginLeft="60dp"
                     />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="Home phone"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/Home"
                    />

                <TextView
                    android:text="Home phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:id="@+id/textViewHome"
                    android:layout_marginLeft="60dp"
                    />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="Work phone"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/Work"
                    />

                <TextView
                    android:text="My Work phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:id="@+id/textViewWork"
                    android:layout_marginLeft="60dp"
                    />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:id="@+id/Email"
                    />


                <TextView
                    android:text="Email@yahoo.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:id="@+id/textViewEmail"
                    android:layout_marginLeft="60dp"
                     />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="Birthdate"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/Birthdate"
                    />

                <TextView
                    android:text="I was born on.."
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewBirthday"
                    android:layout_marginLeft="60dp"
                     />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="Street"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/Street"
                    />

                <TextView
                    android:text="Street where I live"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewStreet"
                    android:layout_marginLeft="60dp"
                     />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="City"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/City"
                    />

                <TextView
                    android:text="My City"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewCity"
                    android:layout_marginLeft="60dp"
                     />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="ZIP"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/ZIP"
                    />

                <TextView
                    android:text="ZIP"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/textViewZip"
                     />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="State"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/State"
                    />

                <TextView
                    android:text="State where I live"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/textViewState"
                    />
            </TableRow>

        </TableLayout>
    </ScrollView>
         </RelativeLayout>
